{
    "name": "esbuild-coffeescript",
    "version": "3.0.0",
    "description": "Bundle CoffeeScript with Esbuild",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "format": "biome format --write",
        "lint": "biome check --write"
    },
    "keywords": [
        "esbuild",
        "esbuild-coffeescript",
        "esbuild-plugin",
        "coffeescript",
        "litcoffee"
    ],
    "author": "Johnie Hjelm <johnie@hjelm.im>",
    "repository": {
        "type": "git",
        "url": "https://github.com/johnie/esbuild-coffeescript.git"
    },
    "license": "MIT",
    "dependencies": {
        "coffeescript": "^2.7.0"
    },
    "peerDependencies": {
        "esbuild": "^0.25.5"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.6",
        "@types/coffeescript": "2.5.7",
        "@types/node": "24.0.12",
        "@vitest/coverage-v8": "3.2.4",
        "esbuild-jest": "^0.5.0",
        "typescript": "5.8.3",
        "vitest": "^3.2.4"
    },
    "prettier": {
        "singleQuote": true
    }
}
